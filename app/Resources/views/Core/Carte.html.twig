{% extends 'base.html.twig' %}
{% block body %}

    <div class="row">
        {% for i in product %}
            <section>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-lg-offset-1"
                     style="height:200px;">
                    <div class="span7">

                            <ul><img style="max-width:200px; margin-top: 20px;"
                                     src="{{ asset('uploads/pictures/' ~ i.picture) }}"></ul>
                            <ul>{{ i.productname }}</ul>
                            <ul>{{ i.productdescription }}</ul>
                            <ul>Prix: {{ i.unitaryprice }} € <p>Shopping-cart icon on a button:
                                    <button type="button" class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-shopping-cart"></span> Ajouter à la commande
                                    </button>
                                </p></ul>


                    </div>

            </section>
        {% endfor %}
    </div>




{% endblock %}
